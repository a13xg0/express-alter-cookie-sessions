{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Boilerplate for Node.js TypeScript projects",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=development nodemon -e ts,js,json --ignore cypress --ignore '*.spec.ts'",
    "start:inspect": "NODE_ENV=development nodemon --inspect -e ts,js,json --ignore '*.spec.ts'",
    "test-server": "NODE_ENV=test nodemon -e ts,js,json --ignore '*.spec.ts'",
    "pretty": "prettier --write \"./**/*.{ts,json,js}\"",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Alex Gorbach",
  "license": "MIT",
  "dependencies": {
    "cookie-session": "^2.1.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css}": [
      "prettier --write"
    ]
  }
}
